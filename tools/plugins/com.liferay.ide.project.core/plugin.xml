   <extension
         point="org.eclipse.wst.common.project.facet.core.facets">
      <category
            id="liferay.plugins">
         <label>
            Liferay Plugins
         </label>
         <description>
            Liferay Portal Plugin facets including, portlets, hooks, ext, themes, layout, and web templates.
         </description>
      </category>

      <project-facet
            id="liferay.portlet">
         <label>
            Liferay Portlet
         </label>
         <description>
            Portlet plugin for Liferay portal.  Version corresponds to Portal version.
         </description>
         <member
               category="liferay.plugins">
         </member>
         <default-version
               version="6.0">
         </default-version>
      </project-facet>
      <project-facet-version
            facet="liferay.portlet"
            version="6.0">
         <constraint>
            <and>
               <requires
                     facet="jst.java"
                     version="[5.0">
               </requires>
               <requires
                     facet="jst.web"
                     version="[2.3">
               </requires>
            </and>
         </constraint>
      </project-facet-version>
      <action
            facet="liferay.portlet"
            id="liferay.portlet.install"
            type="INSTALL"
            version="[6.0">
         <delegate
               class="com.liferay.ide.project.core.facet.PortletPluginFacetInstall">
         </delegate>
         <config-factory
               class="com.liferay.ide.project.core.facet.PortletPluginFacetInstallDataModelProvider">
         </config-factory>
      </action>
      <action
            facet="liferay.portlet"
            id="liferay.portlet.uninstall"
            type="UNINSTALL"
            version="[6.0">
         <delegate
               class="com.liferay.ide.project.core.facet.PortletPluginFacetUninstall">
         </delegate>
      </action>
      <template
            id="liferay.portlet.template">
         <label>
            Liferay Portlet Plugin Project
         </label>
         <fixed
               facet="jst.java">
         </fixed>
         <fixed
               facet="jst.web">
         </fixed>
         <fixed
               facet="liferay.portlet">
         </fixed>
      </template>

